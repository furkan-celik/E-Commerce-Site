@model AlbarakaECommerce.Models.Adress

@{
    ViewBag.Title = "Create";
}

<h3>New Adress</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.responsibleName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Responsible Name", @required = "Required" } })
                @Html.ValidationMessageFor(model => model.responsibleName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.adressLine, new { htmlAttributes = new { @class = "form-control", @placeholder = "Address", @required = "Required" } })
                @Html.ValidationMessageFor(model => model.adressLine, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.district, new { htmlAttributes = new { @class = "form-control", @placeholder = "District", @required = "Required" } })
                @Html.ValidationMessageFor(model => model.district, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.province, new { htmlAttributes = new { @class = "form-control", @placeholder = "Province", @required = "Required" } })
                @Html.ValidationMessageFor(model => model.province, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.country, new { htmlAttributes = new { @class = "form-control", @placeholder = "Country", @required = "Required" } })
                @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.phoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Phone Number", @required = "Required", @type = "number" } })
                @Html.ValidationMessageFor(model => model.phoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.emailAdress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email Adress", @required = "Required", @type = "email" } })
                @Html.ValidationMessageFor(model => model.emailAdress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-11 col-md-12">
                <button type="submit" value="Create" class="btn btn-success" >
                    <span class="glyphicon glyphicon-floppy-save"></span>
                    Save
                </button>
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Adress")" class="btn btn-info">
        <span class="glyphicon glyphicon-menu-left"></span>
        Back to list
    </a>
</div>
