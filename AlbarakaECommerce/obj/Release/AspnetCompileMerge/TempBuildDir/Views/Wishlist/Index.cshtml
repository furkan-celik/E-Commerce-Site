@model IEnumerable<AlbarakaECommerce.Models.Product>

@{
    ViewBag.Title = "Index";
}

<section id="cart_items">
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Item</td>
                        <td class="description"></td>
                        <td class="total">Price</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td class="cart_product">
                                <a href=""><img src="~/images/Products/Small/@Path.GetFileName(item.productPicture)" alt=""></a>
                            </td>
                            <td class="cart_description">
                                <h4><a href="">@item.productName</a></h4>
                                @item.productDescription
                                <p>Web ID: @item.productId</p>
                            </td>
                            <td class="cart_total">
                                <p class="cart_total_price">@item.productPrice tl</p>
                            </td>
                            <td class="cart_delete">
                                <a class="cart_quantity_delete" href="@Url.Action("Delete", "Wishlist", new { productId = item.productId, returnView = "Index", returnController = "Wishlist" }) "><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</section>